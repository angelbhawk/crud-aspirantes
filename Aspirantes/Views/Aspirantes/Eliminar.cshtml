@model AspiranteModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Editar aspirante
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Aspirantes" method="post">
            <input asp-for="IdAspirante" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el aspirante : @Html.DisplayTextFor(m => m.Nombre) ?
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>

            <a asp-action="Listar" asp-controller="Aspirantes" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>


